# if paths get messed up, this can help
if [ -x /usr/libexec/path_helper ]; then
	eval `/usr/libexec/path_helper -s`
fi

# NAME
export CPD_NAME=MB

# brew
# In order to use this build of zsh as your login shell,
# it must be added to /etc/shells.
# Add the following to your zshrc to access the online help:
unalias run-help
autoload run-help
HELPDIR=/usr/local/share/zsh/help

# set ipython notebook
export IPYTHON_NOTEBOOK_DIR="$HOME/Projects/ipynbs"

# repace pip with anaconda pip
# alias pip="/Users/cpd/anaconda3/bin/pip"

eval "$(gdircolors ${HOME}/.dircolors)";
alias ls='gls -hFa --color'
alias vim='mvim -v -c "colorscheme lucius | set background=dark"'
alias pylab='it2setcolor preset "GithubMod"; ipython --profile=nbserver; it2setcolor preset "LuciusDark"'
source ${HOME}/.dotfiles/promptline/promptline_LuciusDarkVIM.sh

# projects
# # wizard
# export PYTHONPATH="/Users/cpd/Projects/wizard:$PYTHONPATH"
# export PATH="/Users/cpd/Projects/wizard/scripts:$PATH"
# lifegames
export PYTHONPATH="/Users/cpd/Projects/lifegames:$PYTHONPATH"
# pymarlade
export PYTHONPATH="/Users/cpd/Projects/pymarlade:$PYTHONPATH"
export PATH="/Users/cpd/Projects/pymarlade/scripts:$PATH"
# gmmpy
export PYTHONPATH="/Users/cpd/Projects/gmmpy:$PYTHONPATH"
export PATH="/Users/cpd/Projects/gmmpy/scripts:$PATH"

# anaconda
# you may need to type the following line in order to use anaconda for a given task:
# source activate root
# conda activate galsim for a working install of galsim
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/Library/TeX/texbin"
export PATH="/Users/cpd/anaconda3/bin:$PATH";
export PATH="/Users/cpd/.local/bin:$PATH";

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/cpd/Projects/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/cpd/Projects/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/cpd/Projects/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/cpd/Projects/google-cloud-sdk/completion.zsh.inc'; fi
